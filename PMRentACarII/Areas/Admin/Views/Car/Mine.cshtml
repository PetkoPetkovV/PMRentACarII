 @model MyCarsViewModel

@{
    ViewBag.Title = "My Cars";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h4>My Added Cars</h4>

@if (!Model.AddedCars.Any())
{
    <h2 class="text-center">You have no added cars yet!</h2>
}

<div class="row">
    @foreach (var car in Model.AddedCars)
    {
        @await Html.PartialAsync("~/Views/Shared/_CarPartial.cshtml", car)
    }
</div>

<h4>My Rented Cars</h4>

@if (!Model.RentedCars.Any())
{
    <h2 class="text-center">You have no rented cars yet!</h2>
}

<div class="row">
    @foreach (var car in Model.RentedCars)
    {
        @await Html.PartialAsync("~/Views/Shared/_CarPartial.cshtml", car)
    }
</div>

